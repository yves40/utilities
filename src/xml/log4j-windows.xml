<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
     <appender name="logsqltools" class="org.apache.log4j.FileAppender">
          <param name="File" value="c:\\temp\\sqltools.log"/>
          <param name="Append" value="true"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{ISO8601} [%7p] %c - %m%n"/>
          </layout>
     </appender>
     <appender name="logloadtool" class="org.apache.log4j.FileAppender">
          <param name="File" value="c:\\temp\\loadtool.log"/>
          <param name="Append" value="true"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{ISO8601} [%7p] %c - %m%n"/>
          </layout>
     </appender>
     <appender name="sqltools" class="org.apache.log4j.FileAppender">
          <param name="File" value="c:\\temp\\sqltools.log"/>
          <param name="Append" value="true"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{ISO8601} [%7p] %c - %m%n"/>
          </layout>
     </appender>
     <appender name="jpa" class="org.apache.log4j.FileAppender">
          <param name="File" value="c:\\temp\\jpa.log"/>
          <param name="Append" value="true"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{ISO8601} [%7p] %c - %m%n"/>
          </layout>
     </appender>
     <appender name="logbatch" class="org.apache.log4j.FileAppender">
          <param name="File" value="c:\\temp\\batches.log"/>
          <param name="Append" value="true"/>
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="%d{ISO8601} [%7p] %c - %m%n"/>
          </layout>
     </appender>
     <appender name="console" class="org.apache.log4j.ConsoleAppender">
          <layout class="org.apache.log4j.PatternLayout">
               <param name="ConversionPattern" value="[%7p] %c - %m%n"/>
          </layout>
     </appender>
<!-- 
     Logger section. Do not forget to modify them according to environment 
     deployment
-->
     <logger name="org.mouserabbit.sqljava" additivity="false"> 
          <level value="debug"/>
          <appender-ref ref="logsqltools"/>
          <appender-ref ref="console"/>
     </logger>
     <logger name="org.mouserabbit.loadtool" additivity="false"> 
          <level value="debug"/>
          <appender-ref ref="logloadtool"/>
          <appender-ref ref="console"/>
     </logger>
     <logger name="org.mouserabbit.utilities" additivity="false"> 
          <level value="info"/>
          <appender-ref ref="logloadtool"/>
          <appender-ref ref="console"/>
     </logger>
     <logger name="org.mouserabbit.jpa" additivity="false"> 
          <level value="trace"/>
          <appender-ref ref="jpa"/>
          <appender-ref ref="console"/>
     </logger>
     <logger name="org.mouserabbit.database" additivity="false"> 
          <level value="info"/>
          <appender-ref ref="logloadtool"/>
          <appender-ref ref="console"/>
     </logger>
     <logger name="org.bizjet.batch" additivity="false"> 
          <level value="info"/>
          <appender-ref ref="logbatch"/>
          <appender-ref ref="console"/>
     </logger>
</log4j:configuration>
